{
    "manifest_version": 3,
    "name": "Quick Notes",
    "version": "2.0.0",
    "description": "Premium colorful sticky notes extension (React + TS)",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
